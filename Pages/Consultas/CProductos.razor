@page "/cproductos"
@inject IToastService toast

<EditForm Model="Producto" OnValidSubmit="Buscar">
    <DataAnnotationsValidator />

    <div class="card ">
        <div class="card-header">
            <h3>Consulta de Productos</h3>
        </div>

        <div class="card-body">
            <table>
                <thead>
                    <tr>Id</tr>
                    <tr>Descripción</tr>
                    <tr>Existencia</tr>
                    <tr>Costo</tr>
                    <tr>Valor Inventario</tr>
                </thead>
                <tbody>
                </tbody>
            </table>
                
        </div>
    </div>
</EditForm>

@code {
    private List<Productos> Producto = new List<Productos>() { };

    protected override void OnInitialized()
    {
        Buscar();
    }

    private void Buscar()
    {
            var encontrado = ProductosBLL.GetList(c => true);
            if (encontrado != null)
                this.Producto = encontrado;
    }

}
